<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/laySignIn"
        tools:context="com.example.irfan.easybensinv1.auth.AuthActivity"
        android:background="@drawable/back_auth">

    <TextView
            android:text="Sign In"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvSignIn"
            android:fontFamily="@font/candal"
            android:textSize="30sp"
            android:textColor="@color/colorWhite"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.216"
            android:layout_marginTop="60dp"/>
    <android.support.constraint.ConstraintLayout
            android:layout_width="344dp"
            android:layout_height="205dp"
            android:background="@drawable/corner_layout"
            android:id="@+id/layoutSignIn"
            app:layout_constraintStart_toStartOf="@+id/tvSignUp1"
            android:layout_marginTop="8dp"
            android:elevation="1dp"
            app:layout_constraintTop_toBottomOf="@+id/tvSignIn2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="1.0">

        <EditText
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:hint="Email"
                android:textColorHint="@color/colorAccent"
                android:id="@+id/etSignInEmail"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="13dp"/>
        <EditText
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="Password"
                android:textColorHint="@color/colorAccent"
                android:ems="10"
                android:id="@+id/etSignInPassword"
                app:layout_constraintStart_toStartOf="@+id/etSignInEmail" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/etSignInEmail"
                android:fontFamily="sans-serif-condensed"/>
        <Button
                android:text="Sign In"
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_sign_auth"
                android:id="@+id/btnSignIn"
                android:textColor="@drawable/button_text_selector"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/etSignInPassword"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/etSignInPassword"
                android:textSize="18sp"/>
    </android.support.constraint.ConstraintLayout>
    <TextView
            android:text="Sign Up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvSignIn1"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/tvSignIn"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="72dp"
            android:textColor="@color/colorWhite"/>
    <TextView
            android:text="Sign In"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvSignIn2"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/tvSignIn1"
            app:layout_constraintStart_toEndOf="@+id/tvSignIn1"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.073" android:layout_marginStart="8dp"
            android:textColor="@color/colorWhite" android:textSize="16sp"/>
    <android.support.constraint.ConstraintLayout
            android:layout_width="292dp"
            android:layout_height="50dp"
            android:id="@+id/layoutSignIn2"
            android:background="@drawable/corner_layout2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="196dp"
            app:layout_constraintTop_toTopOf="@+id/layoutSignIn">
        <ImageView
                android:layout_width="120dp"
                android:layout_height="26dp" app:srcCompat="@drawable/group"
                android:id="@+id/imageView6" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <TextView
            android:text="By creating an account, you agree to our"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textColor="@color/colorWhite"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView5" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Terms and Condition"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:id="@+id/textView5" android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textColor="@color/colorWhite" android:textStyle="bold"/>

</android.support.constraint.ConstraintLayout>