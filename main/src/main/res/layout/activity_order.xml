<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NavigationDrawer">

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:background="@color/colorWhite"
            android:layout_height="?attr/actionBarSize"/>
    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp" android:fillViewport="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.571"
            android:id="@+id/nestedScrollView" android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout6">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="128dp" app:srcCompat="@drawable/right_layout"
                    android:id="@+id/imgOrderReg" android:scaleType="fitXY"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toTopOf="parent"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="128dp" app:srcCompat="@drawable/left_layout"
                    android:id="@+id/imgOrderPlus" android:scaleType="fitXY"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/imgOrderReg"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="128dp" app:srcCompat="@drawable/right_layout"
                    android:id="@+id/imgOrderSupreme" android:scaleType="fitXY"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/imgOrderPlus"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="128dp" app:srcCompat="@drawable/left_layout"
                    android:id="@+id/imgOrderDiesel" android:scaleType="fitXY"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/imgOrderSupreme"/>
            <ImageView
                    android:layout_width="168dp"
                    android:layout_height="194dp" app:srcCompat="@drawable/nozz_reg"
                    android:id="@+id/imageView25" android:scaleType="centerCrop" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="@+id/imgOrderReg"
                    app:layout_constraintEnd_toEndOf="@+id/imgOrderReg"/>
            <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp" app:srcCompat="@drawable/octane_87"
                    android:id="@+id/imageView26"
                    app:layout_constraintBottom_toBottomOf="@+id/imgOrderReg"
                    app:layout_constraintEnd_toEndOf="@+id/imgOrderReg" android:layout_marginEnd="88dp"
                    android:layout_marginBottom="4dp"/>
            <TextView
                    android:text="Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4" android:layout_marginTop="32dp"
                    app:layout_constraintTop_toTopOf="@+id/imgOrderReg"
                    app:layout_constraintStart_toStartOf="@+id/imgOrderReg" android:layout_marginStart="56dp"
                    android:textSize="20sp" android:fontFamily="@font/segoeui"
                    android:textColor="@android:color/black"/>
            <TextView
                    android:text="IDR 8.500,-/liter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView19"
                    app:layout_constraintTop_toBottomOf="@+id/textView4"
                    app:layout_constraintStart_toStartOf="@+id/textView4"
                    android:fontFamily="@font/segoeui"/>
            <ImageView
                    android:layout_width="168dp"
                    android:layout_height="194dp" app:srcCompat="@drawable/nozz_plus"
                    android:id="@+id/imageView27" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="@+id/imgOrderPlus"
                    app:layout_constraintStart_toStartOf="@+id/imgOrderPlus" android:scaleType="centerCrop"/>
            <TextView
                    android:text="Plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView20" android:layout_marginTop="32dp"
                    app:layout_constraintTop_toTopOf="@+id/imgOrderPlus"
                    app:layout_constraintStart_toStartOf="@+id/textView21" android:fontFamily="@font/segoeui"
                    android:textSize="20sp" android:textColor="@android:color/black"/>
            <TextView
                    android:text="IDR 9.350,-/liter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView21"
                    app:layout_constraintTop_toBottomOf="@+id/textView20"
                    app:layout_constraintEnd_toEndOf="@+id/imgOrderPlus" android:layout_marginEnd="56dp"
                    android:fontFamily="@font/segoeui"/>
            <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp" app:srcCompat="@drawable/octane_89"
                    android:id="@+id/imageView28"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="88dp"
                    app:layout_constraintBottom_toBottomOf="@+id/imgOrderPlus"/>
            <ImageView
                    android:layout_width="168dp"
                    android:layout_height="194dp" app:srcCompat="@drawable/nozz_supreme"
                    android:id="@+id/imageView29" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="@+id/imgOrderSupreme"
                    app:layout_constraintEnd_toEndOf="@+id/imgOrderSupreme" android:scaleType="centerCrop"/>
            <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp" app:srcCompat="@drawable/octane_93"
                    android:id="@+id/imageView30" app:layout_constraintEnd_toEndOf="@+id/imgOrderSupreme"
                    android:layout_marginEnd="88dp"
                    app:layout_constraintBottom_toBottomOf="@+id/imgOrderSupreme"/>
            <TextView
                    android:text="Supreme+"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView22" android:layout_marginTop="32dp"
                    app:layout_constraintTop_toTopOf="@+id/imgOrderSupreme"
                    app:layout_constraintStart_toStartOf="@+id/imgOrderSupreme" android:layout_marginStart="56dp"
                    android:fontFamily="@font/segoeui" android:textSize="20sp"
                    android:textColor="@android:color/black"/>
            <TextView
                    android:text="IDR 10.450,-/liter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView23"
                    app:layout_constraintTop_toBottomOf="@+id/textView22"
                    app:layout_constraintStart_toStartOf="@+id/textView22" android:fontFamily="@font/segoeui"/>
            <ImageView
                    android:layout_width="168dp"
                    android:layout_height="194dp" app:srcCompat="@drawable/nozz_diesel"
                    android:id="@+id/imageView31" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="@+id/imgOrderDiesel"
                    app:layout_constraintStart_toStartOf="@+id/imgOrderDiesel" android:scaleType="centerCrop"/>
            <TextView
                    android:text="Diesel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView24"
                    app:layout_constraintStart_toStartOf="@+id/textView25"
                    android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="@+id/imgOrderDiesel"
                    android:fontFamily="@font/segoeui" android:textSize="20sp"
                    android:textColor="@android:color/black"/>
            <TextView
                    android:text="IDR 5.500,-/liter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView25"
                    app:layout_constraintTop_toBottomOf="@+id/textView24"
                    app:layout_constraintEnd_toEndOf="@+id/imgOrderDiesel" android:layout_marginEnd="56dp"
                    android:fontFamily="@font/segoeui"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>
    <android.support.constraint.ConstraintLayout
            android:layout_width="420dp"
            android:layout_height="60dp"
            android:background="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:id="@+id/constraintLayout6"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/toolbar"
            app:layout_constraintVertical_bias="1.0">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/bot_logo"
                android:id="@+id/imageView13"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
    </android.support.constraint.ConstraintLayout>
    <TextView
            android:text="ORDER"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView26" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/nestedScrollView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/toolbar" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="@+id/toolbar"
            android:layout_marginEnd="8dp" android:fontFamily="@font/segoeuib" android:textStyle="bold"
            android:textSize="20sp" android:textColor="@android:color/black"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="?attr/actionModeCloseDrawable"
            android:id="@+id/imgBackHome" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="@+id/toolbar" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/nestedScrollView"/>

</android.support.constraint.ConstraintLayout>