<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NavigationDrawer">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:background="@color/colorWhite"
            android:layout_height="?attr/actionBarSize"/>
    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp" android:fillViewport="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.571"
            android:id="@+id/nestedScrollView" android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout6">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="183dp"
                    app:srcCompat="@drawable/right_layout"
                    android:id="@+id/imageView5" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                    android:visibility="visible"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="183dp" app:srcCompat="@drawable/left_layout"
                    android:id="@+id/imageView7" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView5" android:visibility="visible"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="183dp" app:srcCompat="@drawable/right_layout"
                    android:id="@+id/imageView8" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView7" android:visibility="visible"/>
            <ImageView
                    android:layout_width="422dp"
                    android:layout_height="240dp" app:srcCompat="@drawable/left_layout"
                    android:id="@+id/imageView9" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/imageView8"
                    android:layout_marginEnd="14dp" android:scaleType="fitXY" android:visibility="visible"
                    app:layout_constraintHorizontal_bias="0.24"/>
            <ImageView
                    android:layout_width="206dp"
                    android:layout_height="182dp" app:srcCompat="@drawable/nozzle"
                    android:id="@+id/imageView10" android:scaleType="fitEnd"
                    app:layout_constraintEnd_toEndOf="@+id/imageView5"
                    app:layout_constraintTop_toTopOf="@+id/imageView5" android:visibility="visible"/>
            <TextView
                    android:text="ORDER"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView" android:fontFamily="@font/segoeui"
                    android:textSize="20sp" android:layout_marginTop="40dp"
                    app:layout_constraintTop_toTopOf="@+id/imageView5" android:layout_marginEnd="92dp"
                    app:layout_constraintEnd_toStartOf="@+id/imageView10" android:textColor="@color/orderBlack"
                    android:visibility="visible" android:layout_marginStart="76dp"
                    app:layout_constraintStart_toStartOf="@+id/imageView5"/>
            <TextView
                    android:text="Pesan bensin disini"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    app:layout_constraintTop_toBottomOf="@+id/textView"
                    app:layout_constraintStart_toStartOf="@+id/textView" android:fontFamily="@font/segoeui"
                    android:visibility="visible"/>
            <Button
                    android:text="BELI"
                    android:layout_width="80dp"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:background="@drawable/button_sign_auth"
                    android:id="@+id/btnHomeOrder"
                    android:textColor="@drawable/button_text_selector"
                    android:fontFamily="@font/segoeui"
                    android:textStyle="bold" android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView2"
                    app:layout_constraintStart_toStartOf="@+id/textView2" android:visibility="visible"/>
            <ImageView
                    android:layout_width="227dp"
                    android:layout_height="182dp" app:srcCompat="@drawable/saldo"
                    android:id="@+id/imageView11" app:layout_constraintStart_toStartOf="@+id/imageView7"
                    app:layout_constraintTop_toTopOf="@+id/imageView7" android:scaleType="fitCenter"
                    android:visibility="visible"/>
            <Button
                    android:text="TOP UP"
                    android:layout_width="80dp"
                    android:layout_height="24dp"
                    android:background="@drawable/button_sign_auth"
                    android:id="@+id/btnHomeTopUp" android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView11"
                    app:layout_constraintStart_toStartOf="@+id/textView11" android:textStyle="bold"
                    android:fontFamily="@font/segoeui"
                    android:textColor="@drawable/button_text_selector"
                    android:visibility="visible"/>
            <TextView
                    android:text="SALDO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5" android:layout_marginTop="40dp"
                    app:layout_constraintTop_toTopOf="@+id/imageView7"
                    app:layout_constraintStart_toEndOf="@+id/imageView11" android:layout_marginStart="8dp"
                    android:textSize="20sp" android:textColor="@color/orderBlack" android:fontFamily="@font/segoeui"
                    android:visibility="visible" android:layout_marginEnd="116dp"
                    app:layout_constraintEnd_toEndOf="@+id/imageView7"/>
            <TextView
                    android:text="Sisa saldo IDR "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView11"
                    app:layout_constraintTop_toBottomOf="@+id/textView5"
                    app:layout_constraintStart_toStartOf="@+id/textView5" android:fontFamily="@font/segoeui"
                    android:visibility="visible"/>
            <TextView
                    android:text="1.000.000,-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView12" app:layout_constraintStart_toEndOf="@+id/textView11"
                    app:layout_constraintTop_toTopOf="@+id/textView11" android:fontFamily="@font/segoeui"
                    android:visibility="visible"/>
            <ImageView
                    android:layout_width="210dp"
                    android:layout_height="184dp" app:srcCompat="@drawable/history"
                    android:id="@+id/imageView12" android:scaleType="fitEnd" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/imageView8" android:visibility="visible"/>
            <TextView
                    android:text="HISTORY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView13" android:layout_marginTop="40dp"
                    app:layout_constraintTop_toTopOf="@+id/imageView8"
                    app:layout_constraintEnd_toStartOf="@+id/imageView12" android:layout_marginEnd="72dp"
                    android:textSize="20sp" android:textColor="@color/orderBlack" android:fontFamily="@font/segoeui"
                    android:visibility="visible" android:layout_marginStart="76dp"
                    app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                    android:text="Riwayat pemesanan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView14"
                    app:layout_constraintTop_toBottomOf="@+id/textView13"
                    app:layout_constraintStart_toStartOf="@+id/textView13" android:fontFamily="@font/segoeui"
                    android:visibility="visible"/>
            <Button
                    android:text="LIHAT"
                    android:layout_width="80dp"
                    android:layout_height="24dp"
                    android:background="@drawable/button_sign_auth"
                    android:id="@+id/btnHomeHist"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView14"
                    android:textStyle="bold"
                    android:fontFamily="@font/segoeui"
                    android:textColor="@drawable/button_text_selector"
                    app:layout_constraintStart_toStartOf="@+id/textView14"
                    android:visibility="visible"/>
            <TextView
                    android:text="Easybensin News"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView15" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="@+id/imageView9"
                    app:layout_constraintStart_toStartOf="@+id/imageView9" android:layout_marginStart="36dp"
                    android:textSize="16sp" android:textColor="@color/orderBlack" android:visibility="visible"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:id="@+id/clCompCat"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/clNewsFeed">

                <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp" app:srcCompat="@drawable/news_img_template"
                        android:id="@+id/imageView15" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="24dp" app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="18dp" app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="16dp" app:layout_constraintVertical_bias="0.75"/>
                <TextView
                        android:text="Tentang perusahaan isi bensin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView18"
                        app:layout_constraintTop_toTopOf="@+id/imageView15"
                        app:layout_constraintStart_toEndOf="@+id/imageView15" android:layout_marginStart="32dp"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/share_icon"
                        android:id="@+id/imageView18" app:layout_constraintStart_toStartOf="@+id/textView18"
                        android:layout_marginBottom="12dp" app:layout_constraintBottom_toBottomOf="parent"/>
                <ImageView
                        android:layout_width="64dp"
                        android:layout_height="61dp" app:srcCompat="@drawable/easy_news"
                        android:id="@+id/imageView20"
                        app:layout_constraintTop_toTopOf="@+id/imageView15"
                        app:layout_constraintStart_toStartOf="@+id/imageView15"
                        app:layout_constraintEnd_toEndOf="@+id/imageView15"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView15"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/clNewsFeed"
                    app:layout_constraintTop_toBottomOf="@+id/imageView8" android:layout_marginTop="40dp">

                <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp" app:srcCompat="@drawable/news_img_template"
                        android:id="@+id/imageView16" app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="15dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="24dp" app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="15dp" app:layout_constraintVertical_bias="0.0"/>
                <TextView
                        android:text="Cari bensin lebih mudah dengan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView16"
                        app:layout_constraintTop_toTopOf="@+id/imageView16"
                        app:layout_constraintStart_toEndOf="@+id/imageView16" android:layout_marginStart="32dp"/>
                <TextView
                        android:text="pelayanan isi bensin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView17"
                        app:layout_constraintTop_toBottomOf="@+id/textView16"
                        app:layout_constraintStart_toStartOf="@+id/textView16"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/share_icon"
                        android:id="@+id/imageView17" app:layout_constraintStart_toStartOf="@+id/textView17"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView16"/>
                <ImageView
                        android:layout_width="65dp"
                        android:layout_height="63dp" app:srcCompat="@drawable/van_mockup"
                        android:id="@+id/imageView19"
                        app:layout_constraintTop_toTopOf="@+id/imageView16"
                        app:layout_constraintStart_toStartOf="@+id/imageView16"
                        app:layout_constraintEnd_toEndOf="@+id/imageView16"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView16"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="420dp"
            android:layout_height="60dp"
            android:background="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:id="@+id/constraintLayout6"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/toolbar"
            app:layout_constraintVertical_bias="1.0">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/bot_logo"
                android:id="@+id/imageView13"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
            android:layout_width="22dp"
            android:layout_height="18dp" app:srcCompat="@drawable/user_home"
            android:id="@+id/imgProfilMain" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/toolbar" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/nestedScrollView" app:layout_constraintEnd_toEndOf="@+id/toolbar"
            android:layout_marginEnd="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>