<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:src="@drawable/order_plus"
            android:layout_width="291dp"
            android:layout_height="337dp"
            android:id="@+id/imageView41" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="291dp"
            android:layout_height="72dp"
            android:background="@drawable/corner_layout_campcat"
            app:layout_constraintBottom_toBottomOf="@+id/imageView41"
            app:layout_constraintStart_toStartOf="@+id/imageView41" app:layout_constraintEnd_toEndOf="@+id/imageView41">

        <TextView
                android:text="Plus"
                android:textColor="#FFCC00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView44" android:textSize="16sp"
                android:fontFamily="@font/segoeui" android:layout_marginStart="24dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:text="Deskripsi produk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView45"
                app:layout_constraintTop_toBottomOf="@+id/textView44"
                app:layout_constraintStart_toStartOf="@+id/textView44" android:textSize="12sp"
                android:fontFamily="@font/segoeui"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
