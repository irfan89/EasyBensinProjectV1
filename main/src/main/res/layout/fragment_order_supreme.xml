<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="order.OrderSupremeFragment">

    <ImageView
            android:src="@drawable/order_supreme"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:id="@+id/imageView" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.497"/>
    <TextView
            android:text="Supreme+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="@+id/imageView" android:layout_marginStart="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView" android:layout_marginBottom="60dp"
            android:textColor="@color/orderBlack" android:textStyle="bold" android:fontFamily="@font/segoeui"
            android:textSize="22sp"/>
    <ImageView
            android:src="@drawable/octane_93"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/imageView2" app:layout_constraintEnd_toEndOf="@+id/imageView"
            android:layout_marginBottom="268dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView" android:layout_marginEnd="48dp"/>
    <ImageButton
            android:src="@drawable/price_supreme"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:background="@android:color/transparent"
            android:id="@+id/btnPriceSupreme"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toStartOf="@+id/imageView2"
            android:layout_marginTop="220dp"
            app:layout_constraintTop_toTopOf="@+id/imageView"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="141dp"
            android:layout_height="66dp"
            android:id="@+id/clPriceSupreme"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            android:layout_marginStart="180dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/btnPriceSupreme">

        <ImageView
                android:src="@drawable/price_tag_plus"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/imageView4" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="0.0"/>
        <TextView
                android:text="Rp 10450,-/liter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvPriceReg"
                app:layout_constraintTop_toTopOf="@+id/imageView4" android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="@+id/imageView4"
                app:layout_constraintStart_toStartOf="@+id/imageView4" android:layout_marginStart="8dp"
                android:textStyle="bold" android:textColor="@android:color/black"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
            android:src="@drawable/circle_supreme"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:elevation="-1dp"
            android:id="@+id/imageView6" app:layout_constraintStart_toStartOf="@+id/imageView"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/textView3"
            android:layout_marginStart="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
